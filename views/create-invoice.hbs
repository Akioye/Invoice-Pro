<form action="/create-invoice" method="post" enctype="multipart/form-data">
<div class="invoice-div">

<div class="part-1">
    <div class="inv-num"> <h1>INV1234</h1> </div>
    <div class="logo-box">
        
                <input type="file"  accept="image/*" name="fileud" id="fileud" onchange="loadFile(event)" style="display: none;">
        
        <label for="fileud" style="cursor: pointer;">
          + Logo 
        </label>

        <img id="output" width="25%" />
    </div>
</div>
 {{#if mySettings}}
<div class="part-2">

<div class="from-side">
 <h2> From </h2>
 <div>
 <label for=""> Name </label>
 <input type="text" name="fromname" value="{{mySettings.companyName}}">
 </div>
 <div>
 <label for=""> Email </label>
 <input type="text" name="fromemail" value="{{mySettings.companyEmail}}">
 </div>
 <div>
 <label for=""> Address </label>
 <input type="text" name="fromaddress" value="{{mySettings.companyAddress}}">
 </div>
 <div>
 <label for=""> Phone Number </label>
 <input type="text" name="fromphonenumber" value="{{mySettings.companyPhoneNumber}}">
 </div>

<div>
 <label for=""> Business Number </label>
 <input type="text" name="frombusinessnumber" value="{{mySettings.companyBusinessNumber}}">
 </div>

 <div>
 <label for=""> Date </label>
 <input type="text" name="fromdate">
 </div>

</div>

<div class="to-side">
 <h2> To </h2>
 <div>
 <label for=""> Name </label>
 <input type="text" name="toname">
 </div>
 <div>
 <label for=""> Email </label>
 <input type="text" name="toemail">
 </div>
 <div>
 <label for=""> Address </label>
 <input type="text" name="toaddress">
 </div>
 <div>
 <label for=""> Phone Number </label>
 <input type="text" name="tophonenumber">
 </div>
 



</div>

</div>
{{else}}
<div class="part-2">

<div class="from-side">
 <h2> From </h2>
 <div>
 <label for=""> Name </label>
 <input type="text" name="fromname">
 </div>
 <div>
 <label for=""> Email </label>
 <input type="text" name="fromemail">
 </div>
 <div>
 <label for=""> Address </label>
 <input type="text" name="fromaddress">
 </div>
 <div>
 <label for=""> Phone Number </label>
 <input type="text" name="fromphonenumber">
 </div>

<div>
 <label for=""> Business Number </label>
 <input type="text" name="frombusinessnumber">
 </div>

 <div>
 <label for=""> Date </label>
 <input type="text" name="fromdate">
 </div>

</div>

<div class="to-side">
 <h2> To </h2>
 <div>
 <label for=""> Name </label>
 <input type="text" name="toname">
 </div>
 <div>
 <label for=""> Email </label>
 <input type="text" name="toemail">
 </div>
 <div>
 <label for=""> Address </label>
 <input type="text" name="toaddress">
 </div>
 <div>
 <label for=""> Phone Number </label>
 <input type="text" name="tophonenumber">
 </div>
 



</div>

</div>

 {{/if}}

<hr>

<div class="part-3">
<div class="table-div">
<table >
    <thead>
            <tr>
                 <th>
                     Description
                 </th>
                   <th>
                     Rate
                 </th>
                   <th>
                     QTY
                 </th>
                   <th>
                     Amount                 
                   </th>
            </tr>
    </thead>

    <tbody>
            <tr>
                <td>
                <button> &times;</button> 
                <input type="text" name="description"> 

                </td>
                   <td>
                    <input type="text" name="rate"> 
                </td>
                   <td>
                <input type="text" name="qty"> 
                </td>
                   <td>
                    N 455,000
                   </td>
            </tr>
             




             <tr>
           
                   <td colspan="4" id="tb-td-2">
                        <button>
                            &plus;
                        </button>
                   </td>
            </tr>

   <tr id="tbtd-p">
           
     <td colspan="4" id="tb-td">
                    <p> SubTotal : N10,000</p>
                    <p> Balance Due : N10,000 </p>
                   </td>
            </tr>


    </tbody>
</table>
</div>

</div>



<div class="part-4">
<p> Notes </p>

<textarea name="notes" id="" cols="90" rows="7" >

</textarea>

</div>
</div>

<div class="before-table-2">
    <div class="invoice-cats">
         <a href="#">
        <div>
            Preview
        </div>
        </a>
    </div>

    <a href="#new-invoice">
    <div class="new-invoice">
       <button class = "divbutton" type="submit"> Create Invoice </button> 
    </div>
    </a>
</div>

